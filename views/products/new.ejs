<% layout('layouts/boilerplate') -%>

<div class="ui main text container segment">
    <div class="ui huge header" style="text-align: center">Add A New Product</div>

    <form action="/products" method="POST" class="ui form">
        <div class="field">
            <label for="title">Title:</label><br>
            <input class="ui input focus" type="text" name="title" placeholder="Title goes here...">
        </div><br>
        <div class="field">
            <label for="image">Image:</label><br>
            <input class="ui input focus" type="text" name="image" placeholder="Paste URL here...">
        </div><br>
        <div>
            <strong><label>Price:</label></strong>
        </div><br>
        <div class="field ui labeled input">
            <div class="ui label">$</div>
            <input type="text" name="price" placeholder="Price">
        </div><br>
        <div class="field">
            <label for="description">Product Description:</label><br>
            <textarea name="description" placeholder="Put product description here..."></textarea>
        </div>
        <button type="submit" class="large teal ui button">Add Product</button>
    </form>
</div>

